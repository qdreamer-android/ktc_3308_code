<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:typeface">monospace</item>
        <item name="android:screenOrientation">landscape</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="actionBarSize">@dimen/dp_56</item>
        <item name="android:configChanges">screenSize|keyboard|keyboardHidden|orientation</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/colorTransparent</item>
    </style>

    <style name="SplashScreenTheme" parent="FullScreenTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


    <!-- 对话框样式 -->
    <style name="DialogTheme" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomDialogAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_from_bottom_to_in</item>
        <item name="android:windowExitAnimation">@anim/translate_from_bottom_to_out</item>
    </style>

    <style name="CenterDialogAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_from_center_to_in</item>
        <item name="android:windowExitAnimation">@anim/translate_from_center_to_out</item>
    </style>


    <style name="HorizontalLinePx1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorGray</item>
    </style>

    <style name="HorizontalLineDp1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/colorGray</item>
    </style>

    <item name="banner_indicatorId" type="id" />

</resources>
